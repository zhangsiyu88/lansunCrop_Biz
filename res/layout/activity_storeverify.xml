<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/app_bg">
    
    <include layout="@layout/activity_com" />
    <FrameLayout 
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout 
                style="@style/w_wrap_h_wrap"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >
            
            <ImageView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:src="@drawable/store_auditing"></ImageView>
            
            
            <TextView
                android:layout_marginTop="25dp" 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已进入审核阶段请耐心等待"
                android:textSize="20dp"
                android:textColor="@color/text_gray1"
                />
             <TextView
                android:layout_marginTop="12.5dp" 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店审核会在3~7个工作日内，您可以在"
                android:textColor="@color/text_gray4"
                android:textSize="14dp"
                />
               <TextView
                android:layout_marginTop="1dp" 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“消息中心”里可以收到迈界审核通知"
                android:textColor="@color/text_gray4"
                android:textSize="14dp"
                />
            
            
            </LinearLayout>
        </RelativeLayout>
        
        
    </FrameLayout>
    
    <RelativeLayout
        android:layout_weight="0"
        style="@style/w_full_h_wrap"
        android:layout_marginBottom="25dp"
        >
        <TextView 
            android:layout_centerInParent="true"
            style="@style/w_wrap_h_wrap"
            android:text="返回首页"
            android:textSize="14dp"
            android:textColor="@color/text_gray3"
            
            />
        
	</RelativeLayout>
</LinearLayout>
