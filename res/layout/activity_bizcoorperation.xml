<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/app_white">
    
    <!-- 公共头部  -->
    <include 
        android:id="@+id/header"
        layout="@layout/header"/>
    <!-- 头部  -->
    <!-- <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
    </RelativeLayout> -->
    
    <!-- tip  -->
    <RelativeLayout
        android:layout_below="@id/header"
        android:id="@+id/rl_tip"
        style="@style/rl_w_m_h_w">
      
       <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bizcooperation_tip"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"/><!--android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"  -->
    </RelativeLayout>
    <!-- 第1条 -->
    <RelativeLayout
        android:id="@+id/rl_1"
       android:layout_below="@id/rl_tip"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_1"
             android:text="1"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/claim_store"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
              android:id="@+id/tv_pelase_claim_store"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_claim_store"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
        android:id="@+id/line_1"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_1"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
    
     <!-- 第2条 -->
    <RelativeLayout
       android:layout_below="@id/line_1"
       android:id="@+id/rl_2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_2"
             android:text="2"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/biz_info"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_biz_info"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:id="@+id/line_2"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_2"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
     <!-- 第3条 -->
    <RelativeLayout
       android:layout_below="@id/line_2"
       android:id="@+id/rl_3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_3"
             android:text="3"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/biz_user_info"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_biz_user_info"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:id="@+id/line_3"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_3"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"/>

     <!-- 第4条 -->
    <RelativeLayout
       android:layout_below="@id/line_3"
       android:id="@+id/rl_4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_4"
             android:text="4"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/upload_verify_meaterial"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_upload_verify_meaterial"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:id="@+id/line_4"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_4"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
    
     <!-- 第5条 -->
    <RelativeLayout
       android:layout_below="@id/line_4"
       android:id="@+id/rl_5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_5"
             android:text="5"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/verify_result"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_verify_result"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_5"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
    
    <LinearLayout 
            android:id="@+id/ll_protocol"
            android:layout_marginBottom="30dp"
	        android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"> 
             <CheckBox 
                 android:id="@+id/cb_agree"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:checked="false"
                 android:text="已阅读并同意"
                 android:textColor="@color/text_nomal"
                 android:textSize="16sp"/>
             
             <TextView
                 android:id="@+id/tv_store_verify_protocol"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:checked="false"
                 android:text="《门店认证确认书》"
                 android:textColor="@color/bg_blue"
                 android:textSize="16sp"/>
         </LinearLayout>   
    
     <TextView
            android:layout_above="@id/ll_protocol"
	        android:id="@+id/tv_go2homepage"
	        style="@style/text_style_small_24"
	        android:layout_width="@dimen/register_item_w"
	        android:layout_height="@dimen/register_item_h"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/margin_top_50"
	        android:background="@drawable/button"
	        android:gravity="center"
	        android:text="@string/go2homepage"
	        android:textColor="@color/app_white" 
	        android:focusable="true"/><!-- 让其获取焦点 -->
     <TextView
	        android:layout_above="@id/tv_go2homepage"
	        android:id="@+id/tv_submit_verify"
	        style="@style/text_style_small_24"
	        android:layout_width="@dimen/register_item_w"
	        android:layout_height="@dimen/register_item_h"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/button"
	        android:gravity="center"
	        android:text="@string/submit_2verify"
	        android:textColor="@color/app_white" 
	        android:focusable="true"/><!-- 让其获取焦点 -->
       
        <FrameLayout 
           android:id="@+id/biz_frame"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:background="@color/transparent" 
	       android:visibility="gone"><!--  -->
        </FrameLayout>
    
</RelativeLayout>
