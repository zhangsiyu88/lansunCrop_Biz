<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#20000000">
    
     <!-- 意见核问题反馈  的tittle -->
    <RelativeLayout
          android:layout_width="match_parent"
	      android:layout_height="50dp"
	      android:background="#ffffff">
	      
        <ImageView 
          android:id="@+id/iv_back_bro"
          android:layout_width="10dp"
	      android:layout_height="15dp"
	      android:layout_marginLeft="10dp"
	      android:src="@drawable/back_arrow"
	      android:layout_alignParentLeft="true"
	      android:layout_centerVertical="true"
            />
         <TextView
               android:id="@+id/tv_brotherrank"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerInParent="true"
	           android:text="兄弟门店排名"
	           android:textColor="#a1c9e2"
	           android:textSize="20dp" />
          <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentRight="true"
	           android:layout_alignBaseline="@id/tv_brotherrank"
	           android:layout_marginRight="5dp"
	           android:text="奖励说明"
	           android:textColor="#50000000"
	           android:textSize="15dp" />
          
        </RelativeLayout>
        
         <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	 </LinearLayout>
 
        
        <LinearLayout
               android:layout_width="match_parent"
	           android:layout_height="match_parent" 
	           android:gravity="center_horizontal"
	           android:orientation="vertical"
	           android:background="#ffffff">
      
          
               <ImageView 
                   android:layout_marginTop="20dp"
                   android:id="@+id/iv_nothing"
	               android:layout_width="20dp"
		           android:layout_height="20dp" 
		           android:src="@drawable/fans"
		            />
           
                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非常抱歉，暂无排名"
                    android:textSize="20dp"
                    android:textColor="#80000000"/>
                 <TextView
                     android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的门店还未有兄弟门店加入"
                    android:textSize="15dp"
                    android:textColor="#50000000"/>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center_horizontal"
                     >

                     <TextView
                         android:id="@+id/tv_back_bro"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerInParent="true"
                         android:text="返回上一页"
                         android:textColor="#50000000"
                         android:textSize="12dp" />
                 </RelativeLayout>
                
        </LinearLayout>

</LinearLayout>
