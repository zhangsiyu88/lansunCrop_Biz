<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/app_bg">
    
     <include layout="@layout/activity_com" />
    <FrameLayout 
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <LinearLayout 
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
             <ImageView
                android:id="@+id/iv_unpass"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@drawable/store_auditing" />
             
            <LinearLayout 
                style="@style/w_wrap_h_wrap"
              
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                >
		            <TextView
		                
		                android:layout_marginTop="10dp"
		                android:layout_gravity="center_horizontal"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="非常抱歉，您的门店申请未通过"
		                android:textSize="20dp"
		                android:textColor="@color/text_gray1"
		                />
		            
		            <View style="@style/line_style_3"
		                android:layout_marginTop="10dp"/>
		            
	            
	            
		             <TextView
		                android:layout_marginTop="12.5dp" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="可能存在下面的问题："
		                android:textColor="@color/text_gray1"
		                android:textSize="14dp"
		                />
		             
		                <TextView
		                android:layout_marginTop="12.5dp" 
		                
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="1.您说添加的门店信息已存在，请重新输入相"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		               <TextView
		                android:layout_marginTop="1dp" 
		               
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="关信息仔细匹配并选择。"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		                <TextView
		                android:layout_marginTop="12.5dp" 
		                
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="2.您所添加的门店信息有误，请仔细查看相关"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		               <TextView
		                android:layout_marginTop="1dp" 
		               
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="要求，重新申请。"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		                <TextView
		                android:layout_marginTop="12.5dp" 
		              
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="3.您所添加的门店尚未涉及迈界所覆盖的商区"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		               <TextView
		                android:layout_marginTop="1dp" 
		              
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="活动范围之内，请等待商业开拓发展，给您带"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		                <TextView
		                android:layout_marginTop="1dp" 
		               
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="来的不便敬请谅解。"
		                android:textColor="@color/text_gray4"
		                android:textSize="14dp"
		                />
		            
		               
		               
		               
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    
    <RelativeLayout
        android:layout_weight="0"
        style="@style/w_full_h_wrap"
        android:layout_marginBottom="25dp"
        >
        <TextView 
            android:layout_centerInParent="true"
            style="@style/w_wrap_h_wrap"
            android:text="返回首页"
            android:textSize="14dp"
            android:textColor="@color/text_gray3"
            
            />
        
	</RelativeLayout>
    

</LinearLayout>
