<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#efefef">
    
     <!-- 意见核问题反馈  的tittle -->
    <RelativeLayout
          android:layout_width="match_parent"
	      android:layout_height="50dp"
	      android:background="#ffffff">
	      
        <ImageView 
            android:id="@+id/iv_back_insertinfo"
          android:layout_width="10dp"
	      android:layout_height="15dp"
	      android:layout_marginLeft="10dp"
	      android:background="@drawable/back_arrow"
	      android:layout_alignParentLeft="true"
	      android:layout_centerVertical="true"
            />
         <TextView
               android:id="@+id/tv_brotherrank"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerInParent="true"
	           android:text="填写信息"
	           android:textColor="#a1c9e2"
	           android:textSize="20dp" />
        </RelativeLayout>
         <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	 </LinearLayout>

         <!--您选择的门店  -->
         <TextView 
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
	      	 android:layout_height="wrap_content"
	      	 android:text="您选择的门店"
	      	 android:textColor="#50000000"
             />
         
         <LinearLayout 
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
	      	 android:layout_height="90dp"
	      	 android:background="#ffffff"
	      	 android:orientation="vertical"
	      	 android:padding="10dp"
             >
             <TextView 
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
	      	  android:layout_height="wrap_content"
	      	  android:text="星巴克（创智店）"
	      	  android:textColor="#99000000"
              />
             
              <TextView 
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
	      	  android:layout_height="wrap_content"
	      	  android:text="上海市杨浦区淞沪路252-256号A1-24号创智天地下沉广场内（近政民路）"
	      	  android:textColor="#50000000"
              />
        </LinearLayout>
        <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
         
         <!--您的基本信息  -->
         <TextView 
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
	      	 android:layout_height="wrap_content"
	      	 android:text="您的基本信息 "
	      	 android:textColor="#50000000"
             />
         
        <RelativeLayout 
            android:layout_marginTop="10dp"
             android:layout_width="match_parent"
	      	 android:layout_height="50dp"
	      	 android:background="#ffffff"
	      	 android:padding="5dp"
	      	android:layout_gravity="center_vertical"
             >
              <TextView 
              android:layout_centerVertical="true"
             
              android:id="@+id/tv_realname"
              android:layout_width="wrap_content"
	      	  android:layout_height="wrap_content"
	      	  android:text="真实姓名："
	      	  android:textColor="#99000000"
              />
              <EditText 
              android:id="@+id/et_realname"
              android:layout_toRightOf="@id/tv_realname"
              android:layout_width="match_parent"
	      	  android:layout_height="40dp"
	      	  android:hint="请输入您的姓名"
	      	  android:textSize="10dp"
	      	  android:textColor="#99000000"
	      	  android:background="@null"
	      	  
              />
             
              <!-- 光标是否闪烁! 
               android:cursorVisible="false" -->
        </RelativeLayout>
        
        <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
     	
        
     	<RelativeLayout 
             android:layout_width="match_parent"
	      	 android:layout_height="50dp"
	      	 android:background="#ffffff"
	      	 android:padding="5dp"
             >
              <TextView 
              android:layout_centerVertical="true"
              android:id="@+id/tv_idcardnum"
              android:layout_width="wrap_content"
	      	  android:layout_height="wrap_content"
	      	  android:text="身份证号："
	      	  android:textColor="#99000000"
              />
              <EditText 
              android:id="@+id/et_idnum"
              android:layout_toRightOf="@id/tv_idcardnum"
              android:layout_width="match_parent"
	      	  android:layout_height="40dp"
	      	  android:hint="请输入您的身份证号"
	      	  android:textSize="10dp"
	      	  android:textColor="#99000000"
	      	  android:maxLength="18"
	      	  android:background="@null"
              />
              <!--  设置为只接受数字  android:numeric="integer" -->
        </RelativeLayout>
        <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
     	
     	     <RelativeLayout 
             android:layout_width="match_parent"
	      	 android:layout_height="50dp"
	      	 android:background="#ffffff"
	      	 android:padding="5dp"
             >
              <TextView 
              android:layout_centerVertical="true"
              android:id="@+id/tv_degree"
              android:layout_width="wrap_content"
	      	  android:layout_height="wrap_content"
	      	  android:text="门店职位："
	      	  android:textColor="#99000000"
              />
              <EditText 
               android:id="@+id/et_storedegree"
              android:layout_toRightOf="@id/tv_degree"
              android:layout_width="match_parent"
	      	  android:layout_height="40dp"
	      	  android:hint="请输入您的门店职位"
	      	  android:textSize="10dp"
	      	  android:textColor="#99000000"
	      	  android:background="@null"
              />
        </RelativeLayout>
        <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
     	
         <!--请按要求上传下列资料  -->
         <TextView 
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
	      	 android:layout_height="wrap_content"
	      	 android:text="请按要求上传下列资料"
	      	 android:textColor="#50000000"
             />
         
         
          <LinearLayout 
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
	      	 android:layout_height="wrap_content"
	      	 android:background="#ffffff"
	      	 android:orientation="vertical">
              
	            <RelativeLayout 
		             android:layout_marginTop="5dp"
		             android:layout_width="match_parent"
			      	 android:layout_height="wrap_content"
			      	 android:background="#ffffff"
	             	>
		             <TextView 
		              android:id="@+id/tv_shenfezhneg"
		              android:layout_marginTop="5dp"
		              android:layout_marginLeft="10dp"
		              android:layout_width="wrap_content"
			      	  android:layout_height="wrap_content"
			      	  android:text="认证人手持身份证清晰大头照一张"
			      	  android:textColor="#99000000"/>
		             
		              <TextView 
		              android:layout_alignParentRight="true"
		              android:layout_marginTop="5dp"
		              android:layout_width="wrap_content"
			      	  android:layout_height="wrap_content"
			      	  android:text="【案例】"
			      	  android:textColor="#a1c9e2" />
		              
             </RelativeLayout>
             <FrameLayout 
                 android:id="@+id/fl_idcardphoto"
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:layout_gravity="center"
                 android:layout_margin="5dp"
               
                 >
		       
		        
	             <ImageView 
	                 android:layout_width="match_parent"
	                 android:layout_height="150dp"
	                 android:layout_margin="5dp"
	                 android:layout_gravity="center"
	                 android:background="@drawable/photo_dashedline_rectangle"/>    
		           
	             <ImageView 
                     android:id="@+id/iv_manandidcard"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_margin="5dp"
	                 android:layout_gravity="center"
	                 />
		              
                 <ImageView 
                     android:id="@+id/iv_takeidcardphoto"
	                 android:layout_width="20dp"
	                 android:layout_height="20dp"
	                 android:src="@drawable/send_photo"
	                 android:layout_gravity="center"/>
                 <TextView 
                     android:id="@+id/tv_manandid"
                     android:layout_marginTop="30dp"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center" 
	                 android:text="注意身份证号码清晰可见"
	                 android:textSize="16dp"
	                 android:textColor="#60000000"/>
             </FrameLayout>
        </LinearLayout>
        
          <LinearLayout 
             android:layout_width="match_parent"
	      	 android:layout_height="wrap_content"
	      	 android:background="#ffffff"
	      	 android:orientation="vertical" 
	      	 >
              
	         <RelativeLayout 
		             android:layout_marginTop="5dp"
		             android:layout_width="match_parent"
			      	 android:layout_height="wrap_content"
			      	 android:background="#ffffff"
	             	>
		             <TextView 
		                android:layout_centerInParent="true"
		              android:layout_marginLeft="10dp"
		             android:layout_alignParentLeft="true"
		              android:layout_width="wrap_content"
			      	  android:layout_height="wrap_content"
			      	  android:text="认证人与门店合照一张"
			      	  android:textColor="#99000000"
		              />
		              <TextView 
		                  android:layout_centerInParent="true"
		              android:layout_alignParentRight="true"
		              android:layout_marginTop="5dp"
		              android:layout_width="wrap_content"
			      	  android:layout_height="wrap_content"
			      	  android:text="【案例】"
			      	  android:textColor="#a1c9e2"
		              />
             </RelativeLayout>
             
             <FrameLayout 
                 android:id="@+id/fl_storephoto"
                 android:layout_width="match_parent"
                 android:layout_height="160dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="5dp"
                 android:layout_marginBottom="10dp"
                 >
		              
                 <ImageView 
	                 android:layout_width="match_parent"
	                 android:layout_height="150dp"
	                 android:layout_margin="10dp"
	                 android:layout_gravity="center"
	                 android:background="@drawable/photo_dashedline_rectangle"/>
                 
		         <ImageView 
                     android:id="@+id/iv_storephoto"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_margin="10dp"
	                 android:layout_gravity="center"
	                />
		         
		         
                 <ImageView 
                     android:id="@+id/iv_clicktotakestorephoto"
	                 android:layout_width="20dp"
	                 android:layout_height="20dp"
	                 android:src="@drawable/send_photo"
	                 android:layout_gravity="center"/>
                 <TextView 
                     android:id="@+id/tv_manandstore"
                     android:layout_marginTop="30dp"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center" 
	                 android:text="注意合照中需要出现门店名称或门牌号"
	                 android:textSize="16dp"
	                 android:textColor="#60000000"/>
             </FrameLayout>
        </LinearLayout>
        
          
        <LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
         
        <!--门店照片 -->
         <TextView 
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
	      	 android:layout_height="wrap_content"
	      	 android:text="门店照片"
	      	 android:textColor="#50000000"
             />
         
         <LinearLayout 
             android:layout_marginTop="10dp"
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
     	
         
         <!-- 原本自己写的RelativeLayout从相册选取照片的布局 
          <RelativeLayout 
             android:layout_width="match_parent"
	      	 android:layout_height="80dp"
	      	 android:background="#ffffff"
	      	 android:layout_gravity="center"
	      	  >
             <FrameLayout
                 
                 android:id="@+id/fl_mendianphoto" 
                 android:layout_width="100dp"
                 android:layout_height="60dp"
                 android:layout_gravity="center"
                 android:layout_margin="10dp"
                 
                 >
                  <ImageView 
                     android:id="@+id/iv_firstphoto"
	                 android:layout_width="100dp"
	                 android:layout_height="60dp"
	                 android:layout_margin="5dp"
	                 android:layout_gravity="center"
	                 android:background="@drawable/photo_dashedline_rectangle"/>
              <ImageView 
                     android:id="@+id/iv_sendphoto3"
	                 android:layout_width="20dp"
	                 android:layout_height="20dp"
	                 android:src="@drawable/send_photo"
	                 android:layout_gravity="center"/>
             </FrameLayout>
             
             <TextView 
                 android:id="@+id/tv_sendphotosnum"
                    android:layout_centerVertical="true"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_toRightOf="@id/fl_mendianphoto"
	                 android:layout_marginLeft="10dp"
	                 android:text="上传图片（至少4张）"
	                 android:textSize="12dp"
	                 android:textColor="#60000000"/>
        </RelativeLayout>
        -->
        
         
    	<LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
         
         <!-- 下面是新的GridView的控件,将其放在一个LinearLayout下面 -->
          <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_white" >

            <!-- 嘿嘿,GridView啊,看看这个改良版额GridView -->
            <com.lansunmedia.maijie.base.MyGridView
                android:id="@+id/gv_upload_storephotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/l_r_18"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:paddingBottom="@dimen/margin_top_35"
                android:paddingLeft="@dimen/l_r_35"
                android:paddingRight="@dimen/l_r_35"
                android:paddingTop="@dimen/margin_top_35"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/l_r_18" />

            
            
            <LinearLayout
                android:id="@+id/ll_photo_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/upload_photo_w"
                    android:layout_height="@dimen/upload_photo_h"
                    android:layout_marginBottom="@dimen/margin_top_35"
                    android:layout_marginLeft="@dimen/l_r_35"
                    android:layout_marginTop="@dimen/margin_top_35"
                    android:background="@drawable/photo_dashedline_rectangle"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/send_photo" />
              </LinearLayout>

                <!-- 上传图片 -->
                <TextView
                    android:id="@+id/textView1"
                    style="@style/text_style_nomal_28"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/l_r_35"
                    android:text="@string/upload_photo" />
            </LinearLayout>
        </FrameLayout>
         
         
         
    	<LinearLayout 
          android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="#20000000">
     	</LinearLayout>
     	
    	  <!-- 同意协议  -->
    	  <RelativeLayout 
    	       android:layout_marginTop="10dp"
    	       android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center_vertical"
	           >
             
    	      <CheckBox 
    	          android:layout_marginLeft="10dp"
    	          android:layout_centerVertical="true"
    	          android:id="@+id/cb_checkedbox"
    	          android:layout_width="wrap_content"
    	          android:layout_height="wrap_content"
    	          android:checked="true"/>
    	      
              <TextView 
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/cb_checkedbox"
	             android:layout_margin="10dp"
	             android:layout_width="wrap_content"
		      	 android:layout_height="wrap_content"
		      	 android:text="已阅读并同意《门店认证确认书》"
		      	 android:textColor="#50000000"
		      	 android:textSize="12dp"
	             />
    	  </RelativeLayout>
    	  
    	  <Button 
    	      android:id="@+id/bt_nextstep"
    	      android:layout_margin="10dp"
    	      android:padding="5dp"
    	      android:layout_width="match_parent"
    	      android:layout_height="30dp"
    	      android:background="@drawable/rectangle_blue"
    	      android:text="下一步"
    	      android:textSize="14dp"
    	      android:textColor="#ffffff"
    	      />
        
         

   </LinearLayout>
</ScrollView>