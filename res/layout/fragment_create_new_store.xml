<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/app_bg">
    
    <!-- 公共头部  -->
    <include 
        android:id="@+id/header"
        layout="@layout/header"/>
    <!-- 头部  -->
    <!-- <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
    </RelativeLayout> -->
    
   
    <!-- 门店名称 -->
    <RelativeLayout
       android:background="@color/app_white"
       android:id="@+id/rl_store_name"
       android:layout_below="@id/header"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView
             android:visibility="gone"  
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_1"
             android:text="1"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/store_name"
             android:textSize="16sp"
             android:layout_centerVertical="true"/>
          <EditText 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="@string/please_store_name"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:layout_centerVertical="true"
             android:background="@null"
             android:layout_marginRight="5dp" />
    </RelativeLayout>
    <View 
        android:id="@+id/line_1"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_store_name"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
    
     <!-- 门店地址 -->
    <RelativeLayout
       android:background="@color/app_white"
       android:layout_below="@id/line_1"
       android:id="@+id/rl_store_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView
            android:visibility="gone"  
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_2"
             android:text="2"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/store_address"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
             android:id="@+id/tv_select_location_address"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_store_address"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:id="@+id/line_2"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_store_address"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
     <!-- 地址备注 -->
    <RelativeLayout
       android:background="@color/app_white"
       android:layout_below="@id/line_2"
       android:id="@+id/rl_address_plus"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
            android:visibility="gone" 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_3"
             android:text="3"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/address_plus"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <EditText 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="@string/please_address_plus"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:layout_centerVertical="true"
             android:background="@null"
             android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <View 
       android:visibility="gone"
       android:id="@+id/line_3"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_address_plus"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"/>

     <!-- 第4条 -->
    <RelativeLayout
       android:background="@color/app_white"
       android:layout_marginTop="20dp"
       android:layout_below="@id/line_3"
       android:id="@+id/rl_address_city"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
            android:visibility="gone" 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_4"
             android:text="4"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/address_city"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView
             android:id="@+id/tv_address_city" 
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_address_city"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:id="@+id/line_4"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_address_city"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
    
     <!-- 所在商区 -->
    <RelativeLayout
       android:background="@color/app_white"
       android:layout_below="@id/line_4"
       android:id="@+id/rl_address_biz_area"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp">
        <TextView 
             android:visibility="gone" 
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:id="@+id/tv_5"
             android:text="5"
             android:textSize="14sp"
             android:background="@drawable/btn_bg_normal"
             android:gravity="center"/>
        <TextView 
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/address_biz_area"
             android:textSize="16sp"
             android:gravity="center"
             android:layout_centerVertical="true"/>
          <TextView 
              android:id="@+id/tv_address_biz_area"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/please_address_biz_area"
             android:textSize="12sp"
             android:textColor="@color/text_nomal"
             android:gravity="center"
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:visibility="gone"
       android:background="@color/text_nomal"
       android:layout_below="@id/rl_address_biz_area"
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"/>
    
    
    
    <LinearLayout
            android:visibility="gone" 
            android:id="@+id/ll_protocol"
            android:layout_marginBottom="30dp"
	        android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"> 
             <CheckBox 
                 android:id="@+id/cb_agree"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:checked="false"
                 android:text="已阅读并同意"
                 android:textColor="@color/text_nomal"
                 android:textSize="16sp"/>
             
             <TextView
                 android:id="@+id/tv_store_verify_protocol"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:checked="false"
                 android:text="《门店认证确认书》"
                 android:textColor="@color/bg_blue"
                 android:textSize="16sp"/>
         </LinearLayout>   
    
     <TextView
            android:visibility="gone" 
            android:layout_above="@id/ll_protocol"
	        android:id="@+id/tv_go2homepage"
	        style="@style/text_style_small_24"
	        android:layout_width="@dimen/register_item_w"
	        android:layout_height="@dimen/register_item_h"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/margin_top_50"
	        android:background="@drawable/button"
	        android:gravity="center"
	        android:text="@string/go2homepage"
	        android:textColor="@color/app_white" 
	        android:focusable="true"/><!-- 让其获取焦点 -->
     <TextView
            android:visibility="gone" 
	        android:layout_above="@id/tv_go2homepage"
	        android:id="@+id/tv_submit_verify"
	        style="@style/text_style_small_24"
	        android:layout_width="@dimen/register_item_w"
	        android:layout_height="@dimen/register_item_h"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/button"
	        android:gravity="center"
	        android:text="@string/submit_2verify"
	        android:textColor="@color/app_white" 
	        android:focusable="true"/><!-- 让其获取焦点 -->
      
      
      
      <TextView
            android:layout_margin="20dp"
            android:layout_below="@id/rl_address_biz_area"
	        style="@style/text_style_small_24"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/bind_star"
	        android:textColor="@color/text_nomal" 
	        android:focusable="true"
	        android:textSize="14sp"/><!-- 让其获取焦点 -->
       <Button
            android:id="@+id/btn_crate_claim"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/ll_protocol"
	        style="@style/text_style_small_24"
	        android:layout_width="@dimen/register_item_w"
	        android:layout_height="@dimen/register_item_h"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/margin_top_50"
	        android:background="@drawable/button"
	        android:gravity="center"
	        android:text="@string/take_and_crate"
	        android:textColor="@color/app_white" 
	        android:focusable="true"/><!-- 让其获取焦点 -->
        
    
</RelativeLayout>
