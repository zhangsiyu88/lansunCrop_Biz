<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 全屏幕拉伸 -->
    <style name="w_h_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
  <!-- 高度占满，宽度占满 -->
    <style name="w_m_h_m">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- 高度和屏幕高度一样 宽度自适应 -->
    <style name="w_wrap_h_full">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 宽度和屏幕宽度一样 高度自适应 -->
    <style name="w_match_h_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
       <!-- 宽度和屏幕宽度一样 高度自适应 -->
    <style name="w_full_h_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 固定自身大小 -->
    <style name="w_wrap_h_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
     <!-- 固定大小 20:20-->
    <style name="w_20_h_20">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
        <!-- 固定大小 15:15-->
    <style name="w_15_h_15">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>
    
    
     <!-- 固定大小 full:45-->
    <style name="w_m_h_45">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>
    
    <!-- 固定大小  40:40-->
    <style name="w_40_h_40">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
     <!-- 固定大小  60:60-->
    <style name="w_60_h_60">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <!-- 横向比例分布 -->
    <style name="w_weight_h_full">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0.0dp</item>
    </style>

    <!-- 纵向比例分布 -->
    <style name="h_weight_w_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dp</item>
    </style>

    <!-- 横向比例分布 -->
    <style name="w_weight_h_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0.0dp</item>
    </style>

    <!-- 纵向比例分布 -->
    <style name="h_weight_w_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dp</item>
    </style>
    <!-- 点 -->
    <style name="point_style">
        <item name="android:layout_width">14px</item>
        <item name="android:layout_height">14px</item>
        <item name="android:layout_marginLeft">8px</item>
    </style>

    <style name="shadow" parent="w_wrap_h_wrap">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="shadow_w_full" parent="w_full_h_wrap">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="shadow_w_weight" parent="w_weight_h_wrap">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="shadow_h_weight" parent="h_weight_w_wrap">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

